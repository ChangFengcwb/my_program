<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.action.extension" value=","/>
	<package name="login" extends="struts-default">
		<interceptors>
			<interceptor name="SessionCheck" class="com.cui.interceptor.SessionCheck"/>
			<interceptor-stack name="Session">
				<interceptor-ref name="SessionCheck"/>
				<interceptor-ref name="defaultStack"/>
			</interceptor-stack>
		</interceptors>
		<action name="login" class="com.cui.action.indexAction">
			<interceptor-ref name="Session"/>
			<result name="input">/index.jsp</result>
			<result name="success" type="redirectAction">home?sessionId=${sessionId}</result>
		</action>
		<action name="loginAction" class="com.cui.action.LoginAction">
			<result name="success" type="redirectAction">home?sessionId=${sessionID}</result>
			<result name="input">/index.jsp</result>
		</action>
		<action name="home" class="com.cui.action.HomeAction">
			<interceptor-ref name="Session"/>
			<result name="success">/home.jsp</result>
			<result name="input" type="redirectAction">login</result>
		</action>
	</package>
</struts>